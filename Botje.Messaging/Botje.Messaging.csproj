    <PackageLicenseUrl>https://github.com/pbijdens/botje/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/pbijdens/botje</PackageProjectUrl>
    <RepositoryUrl>https://github.com/pbijdens/botje.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>telegram bot api</PackageTags>
    <AssemblyVersion>0.50.1804.28</AssemblyVersion>
    <FileVersion>0.50.1804.28</FileVersion>
    <Version>0.50.1804.28</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
